@model PersonasIndex

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>Listado de Personas</h2>

<div>
    <a class="btn btn-primary" asp-action="Crear">Crear nueva persona</a>
</div>

@if (Model.Personas.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var persona in Model.Personas)
            {
                <tr>
                    <td>
                        @persona.Nombre
                    </td>
                    <td>
                        <a class="me-2 btn btn-primary" asp-action="Editar" asp-route-id="@persona.Id">Editar</a>
                        <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@persona.Id">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay personas para mostrar...</p>
}